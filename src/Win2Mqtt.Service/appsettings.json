{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "Win2Mqtt": {
        "Broker": {
            "Server": "192.168.1.4",
            "Port": 1883,
            "Username": "",
            "Password": ""
        },
        "MqttTopic": "lechuck",
        "TimerInterval": 5,
        "EnableNotifications": false,
        "Sensors": {
            "CpuSensor": true,
            "FreeMemorySensor": true,
            "IsComputerUsed": true,
            "DiskSensor": true,
            "NetworkSensor": true
        },
        "Listeners": {
            "Monitor": {
                "Topic": "monitor/set",
                "Enabled": true
            },
            "Shutdown": {
                "Topic": "shutdown",
                "Enabled": true
            },
            "Reboot": {
                "Topic": "reboot",
                "Enabled": true
            },
            "Suspend": {
                "Topic": "suspend",
                "Enabled": true
            },
            "Hibernate": {
                "Topic": "hibernate",
                "Enabled": true
            },
            "SendMessage": {
                "Topic": "sendmessage",
                "Enabled": true
            },
            "ProcessRunning": {
                "Topic": "process/running",
                "Enabled": true
            },
            "Exec": {
                "Topic": "exec",
                "Enabled": true
            }
        }
    }
}
